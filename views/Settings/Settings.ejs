<% layout('boilerplate/template') -%>

    <div id = "settingsDiv">
        <h2> <strong> Settings: </strong></h2>
        <label> Username: </label>
        <div class="input-group mb-3">
            <input type = "text" class = "form-control" placeholder = "username" aria-label = "username">
            <button type = "button" id = "usernameButton"> Submit </button>
        </div>
        <label> Change profile picture: </label>
        <div class="input-group">
            <input type="file" class="form-control" id="chooseFile" aria-describedby="inputGroupFileAddon04" aria-label="Upload">
            <button type="button" id="fileUploadButton"> Upload </button>
        </div>
        <div id = "notificationDiv">
            <h3> Turn on notifications: </h3>
            <br>
            <div class="form-check form-switch">
                <input class="form-check-input" type = "checkbox" id ="emailSwitch">
                <label class="form-check-label" for = "emailSwitch"> Email </label>
            </div>
            <div class="form-check form-switch">
                <input class="form-check-input" type = "checkbox" id = "pushSwitch">
                <label class="form-check-label" for = "pushSwitch"> Push notifications</label>
            </div>
            <div class="form-check form-switch">
                <input class="form-check-input" type = "checkbox" id="smsSwitch">
                <label class="form-check-label" for = "smsSwitch"> SMS </label>
            </div>
        </div>
        <br>
        <div id = "privacyDiv">
            <h3> Privacy: </h3>
            <br>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="flexRadioDefault" id="rankedButton">
                <label class="form-check-label" for="rankedButton">
                    Ranked
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="flexRadioDefault" id="logOutButton">
                <label class="form-check-label" for="logOutButton">
                    Log out on exit
                </label>
            </div>
        </div>
        <br>
        <div id = "fitnessRankSelect">
            <h3> Tier of fitness: </h3>
            <br>
            <label>
                <select>
                    <option selected>select</option>
                    <option value="1">low</option>
                    <option value="2">moderate</option>
                    <option value="3">high</option>
                </select>
            </label>
        </div>
    </div>


